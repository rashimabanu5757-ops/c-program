#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[50];
    int hasUpper = 0, hasLower = 0, hasDigit = 0;
    
    printf("Enter your password: ");
    scanf("%s", password);

    int len = strlen(password);

    if(len < 6) {
        printf("Password is invalid: must be at least 6 characters long.\n");
        return 0;
    }

    for(int i = 0; i < len; i++) {
        if(isupper(password[i])) hasUpper = 1;
        else if(islower(password[i])) hasLower = 1;
        else if(isdigit(password[i])) hasDigit = 1;
    }

    if(hasUpper && hasLower && hasDigit) {
        printf("Password is valid.\n");
    } else {
        printf("Password is invalid: must contain uppercase, lowercase, and digit.\n");
    }

    return 0;
}
O/P:
Enter your password: Abc123
Password is valid.

