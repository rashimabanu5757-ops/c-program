#include <stdio.h>

int main() {
    int n,a[10],i,min,max;
    printf("Enter n: "); scanf("%d",&n);
    for(i=0;i<n;i++) scanf("%d",&a[i]);
    min=max=a[0];
    for(i=1;i<n;i++){
        if(a[i]>max) max=a[i];
        if(a[i]<min) min=a[i];
    }
    printf("Largest=%d Smallest=%d\n",max,min);
    return 0;
}
O/P:
Enter n: 5
2 5 1 8 3
Largest=8 Smallest=1
