#include <stdio.h>

int main() {
    int temp[7], i;
    int highest, lowest;

    printf("Enter temperatures for 7 days:\n");
    for (i = 0; i < 7; i++) {
        scanf("%d", &temp[i]);
    }

    highest = lowest = temp[0];

    for (i = 1; i < 7; i++) {
        if (temp[i] > highest)
            highest = temp[i];
        if (temp[i] < lowest)
            lowest = temp[i];
    }

    printf("Highest Temperature = %d\n", highest);
    printf("Lowest Temperature = %d\n", lowest);

    return 0;
}
O/P:
Enter temperatures for 7 days:
28 30 27 31 29 26 32
Highest Temperature = 32
Lowest Temperature = 26
