#include <stdio.h>

struct emp{ int id; int salary; };

int main(){
    struct emp e[2]={{1,1000},{2,2000}};
    int id;
    scanf("%d",&id);
    for(int i=0;i<2;i++)
        if(e[i].id==id) e[i].salary=3000;
    printf("Updated Salary=%d\n",e[1].salary);
    return 0;
}


Output:

2
Updated Salary=3000
