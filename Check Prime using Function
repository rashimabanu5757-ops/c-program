#include <stdio.h>

int isPrime(int n) {
    if (n <= 1) return 0;
    for(int i=2;i*i<=n;i++)
        if(n%i==0) return 0;
    return 1;
}

int main() {
    int num;
    printf("Enter number: ");
    scanf("%d", &num);
    printf("%d is %sprime\n", num, isPrime(num) ? "" : "not ");
    return 0;
}
o/P:
Enter number: 17
17 is prime
